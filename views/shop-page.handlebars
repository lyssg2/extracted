{{#each allShops }}
{{!-- <h2>{{shopName}}</h2>
<p>{{shopLocation}}</p>
<p>{{description}}</p> --}}
<div class="card">
    <div class="card-image waves-effect waves-block waves-light">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{shopName}}<i class="material-icons right">more_vert</i></span>
      <p><a href="#">Go to Website</a></p>
      <p>{{shopLocation}}</p>
      <p>Rating:</p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{shopName}}<i class="material-icons right">close</i></span>
      <p>{{description}}</p>
    </div>
  </div>
  {{/each}}