<div class="container">
    <div class="row">
        <div class="col s12">
            <h2>Add a Review!</h2>
            <form class="form login-form">
                <div class="form-group">
                    <label for="review-title">Title</label>
                    <input class="form-input" type="text" id="review-title" />
                </div>
                <div class="input-field col s12">
                    <textarea id="review-content" class="materialize-textarea"></textarea>
                    <label for="textarea1">Tell us what you think...</label>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" id="submit-review" type="submit">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
</div>