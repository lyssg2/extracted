{{#each oneShop }}
<div class="col s12 m6">
    <div class="card large z-depth-2" id="shop-cards">
        <div class="card-image">
            <img id='reviewShopPhoto' src={{shopPhoto}}>
            <span id='reviewShopName' class="card-title">{{shopName}}</span>
        </div>
        <div class="card-content">
            <p id='reviewShopLocation'>{{shopLocation}}</p>
            <br>
            <p id='reviewShopDescription'>{{description}}</p>
        </div>
    </div>
</div>
 {{/each}}


<div class="container">
    <div class="row">
        <div class="col s12">
            <h2>Add a Review!</h2>
            <form class="form login-form">
                <div class="form-group">
                    <label for="review-title">Title</label>
                    <input class="form-input" type="text" id="review-title" />
                </div>
                <div class="input-field col s12">
                    <textarea id="review-content" class="materialize-textarea"></textarea>
                    <label for="textarea1">Tell us what you think...</label>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" id="submit-review" type="submit">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
</div>

 {{#each Review}}

    <h1>{{review-title}}</h1>
    <p>{{review-content}}</p>


{{/each}}